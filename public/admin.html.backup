<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Panel Admina | Mobilna Asystentka</title>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@200;400;600;800&display=swap" rel="stylesheet">
    <style>
        :root {
            --bg-body: #0a0f18;
            --card-bg: rgba(255, 255, 255, 0.03);
            --accent-color: #3b82f6;
            --text-main: #f8fafc;
            --border-color: rgba(255, 255, 255, 0.2);
            --color-gold: #c5a059;
        }

        * { margin: 0; padding: 0; box-sizing: border-box; }

        body {
            font-family: 'Plus Jakarta Sans', sans-serif;
            background: #000;
            color: var(--text-main);
            overflow: hidden;
        }

        .container {
            display: flex;
            height: 100vh;
        }

        .sidebar {
            width: 300px;
            background: #050505;
            border-right: 1px solid rgba(197, 160, 89, 0.15);
            padding: 30px 20px;
            overflow-y: auto;
        }

        .logo {
            font-size: 0.7rem;
            color: var(--color-gold);
            letter-spacing: 3px;
            font-weight: 800;
            margin-bottom: 40px;
            text-transform: uppercase;
            opacity: 0.7;
        }

        .nav-item {
            padding: 15px 20px;
            margin-bottom: 10px;
            border-radius: 12px;
            cursor: pointer;
            transition: 0.3s;
            border: 1px solid transparent;
            display: flex;
            align-items: center;
            gap: 12px;
            font-size: 0.85rem;
            font-weight: 600;
        }

        .nav-item:hover {
            background: rgba(255, 255, 255, 0.05);
            border-color: rgba(255, 255, 255, 0.1);
        }

        .nav-item.active {
            background: rgba(197, 160, 89, 0.1);
            border-color: var(--color-gold);
        }

        .main-content {
            flex: 1;
            display: flex;
            flex-direction: column;
            overflow: hidden;
        }

        .topbar {
            padding: 20px 40px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: #050505;
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .logout-btn {
            background: rgba(239, 68, 68, 0.1);
            border: 1px solid rgba(239, 68, 68, 0.3);
            color: #ef4444;
            padding: 8px 20px;
            border-radius: 10px;
            font-size: 0.7rem;
            font-weight: 800;
            cursor: pointer;
            transition: 0.3s;
            text-transform: uppercase;
        }

        .logout-btn:hover {
            background: #ef4444;
            color: #fff;
        }

        .content {
            flex: 1;
            padding: 40px;
            overflow-y: auto;
        }

        h1 {
            font-size: 3rem;
            font-weight: 800;
            margin-bottom: 40px;
            letter-spacing: -2px;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 40px;
        }

        .stat-card {
            background: rgba(255, 255, 255, 0.03);
            border: 1px solid rgba(255, 255, 255, 0.05);
            padding: 30px;
            border-radius: 20px;
            transition: 0.3s;
        }

        .stat-card:hover {
            transform: translateY(-5px);
            border-color: rgba(197, 160, 89, 0.3);
        }

        .stat-label {
            font-size: 0.7rem;
            color: #64748b;
            font-weight: 800;
            text-transform: uppercase;
            letter-spacing: 1.5px;
            margin-bottom: 15px;
        }

        .stat-value {
            font-size: 2.5rem;
            font-weight: 800;
            color: var(--color-gold);
        }

        .clients-section {
            background: rgba(255, 255, 255, 0.02);
            border: 1px solid rgba(255, 255, 255, 0.05);
            padding: 30px;
            border-radius: 20px;
        }

        .section-title {
            font-size: 1.2rem;
            font-weight: 800;
            margin-bottom: 20px;
            color: var(--color-gold);
        }

        .client-list {
            display: grid;
            gap: 15px;
        }

        .client-card {
            background: rgba(255, 255, 255, 0.03);
            border: 1px solid rgba(255, 255, 255, 0.08);
            padding: 20px;
            border-radius: 15px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            transition: 0.3s;
            cursor: pointer;
        }

        .client-card:hover {
            background: rgba(255, 255, 255, 0.05);
            border-color: var(--color-gold);
            transform: translateX(5px);
        }

        .client-info h3 {
            font-size: 1rem;
            margin-bottom: 5px;
        }

        .client-info p {
            font-size: 0.75rem;
            color: #64748b;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .client-badge {
            padding: 8px 15px;
            border-radius: 8px;
            font-size: 0.7rem;
            font-weight: 800;
            text-transform: uppercase;
        }

        .badge-premium {
            background: rgba(197, 160, 89, 0.2);
            color: var(--color-gold);
            border: 1px solid var(--color-gold);
        }

        .badge-standard {
            background: rgba(59, 130, 246, 0.2);
            color: #3b82f6;
            border: 1px solid #3b82f6;
        }

        .welcome-box {
            background: linear-gradient(135deg, rgba(197, 160, 89, 0.1), rgba(0,0,0,0.5));
            border: 1px solid rgba(197, 160, 89, 0.3);
            padding: 30px;
            border-radius: 20px;
            margin-bottom: 40px;
        }

        .welcome-box h2 {
            font-size: 1.5rem;
            margin-bottom: 10px;
        }

        .welcome-box p {
            color: #94a3b8;
        }

        .btn-primary {
            background: var(--color-gold);
            color: #000;
            padding: 12px 24px;
            border: none;
            border-radius: 10px;
            font-weight: 800;
            font-size: 0.8rem;
            cursor: pointer;
            transition: 0.3s;
            text-transform: uppercase;
        }

        .btn-primary:hover {
            transform: scale(1.05);
            box-shadow: 0 0 20px rgba(197, 160, 89, 0.4);
        }

        .btn-danger {
            background: rgba(239, 68, 68, 0.2);
            color: #ef4444;
            border: 1px solid #ef4444;
            padding: 8px 16px;
            border-radius: 8px;
            font-weight: 700;
            font-size: 0.75rem;
            cursor: pointer;
            transition: 0.3s;
        }

        .btn-danger:hover {
            background: #ef4444;
            color: #fff;
        }

        .modal-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.9);
            backdrop-filter: blur(10px);
            display: none;
            align-items: center;
            justify-content: center;
            z-index: 1000;
        }

        .modal-overlay.active {
            display: flex;
        }

        .modal {
            background: #0a0a0a;
            border: 1px solid var(--color-gold);
            padding: 40px;
            border-radius: 20px;
            max-width: 600px;
            width: 90%;
            max-height: 80vh;
            overflow-y: auto;
        }

        .modal h2 {
            margin-bottom: 20px;
            color: var(--color-gold);
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            font-size: 0.75rem;
            font-weight: 700;
            color: #94a3b8;
            margin-bottom: 8px;
            text-transform: uppercase;
        }

        .form-group input,
        .form-group select,
        .form-group textarea {
            width: 100%;
            padding: 12px;
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 10px;
            color: #fff;
            font-size: 0.9rem;
        }

        .counter-box {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-top: 10px;
        }

        .counter-btn {
            background: rgba(255, 255, 255, 0.1);
            border: none;
            color: #fff;
            width: 35px;
            height: 35px;
            border-radius: 8px;
            cursor: pointer;
            font-size: 1.2rem;
            font-weight: 800;
        }

        .counter-btn:hover {
            background: var(--color-gold);
            color: #000;
        }

        .counter-value {
            font-size: 1.5rem;
            font-weight: 800;
            min-width: 60px;
            text-align: center;
        }

        .task-card {
            background: rgba(255, 255, 255, 0.02);
            border: 1px solid rgba(255, 255, 255, 0.05);
            padding: 20px;
            border-radius: 15px;
            margin-bottom: 15px;
        }

        .task-card.emergency {
            border-color: #ef4444;
            background: rgba(239, 68, 68, 0.05);
        }

        .task-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 10px;
        }

        .task-title {
            font-size: 1rem;
            font-weight: 700;
        }

        .task-meta {
            font-size: 0.75rem;
            color: #64748b;
            margin-bottom: 10px;
        }

        .status-badge {
            padding: 6px 12px;
            border-radius: 6px;
            font-size: 0.65rem;
            font-weight: 800;
            text-transform: uppercase;
        }

        .status-new { background: rgba(59, 130, 246, 0.2); color: #3b82f6; }
        .status-in_progress { background: rgba(234, 179, 8, 0.2); color: #eab308; }
        .status-completed { background: rgba(34, 197, 94, 0.2); color: #22c55e; }
        .status-rejected { background: rgba(239, 68, 68, 0.2); color: #ef4444; }

        .hidden { display: none !important; }

        .progress-bar {
            width: 100%;
            height: 8px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 10px;
            overflow: hidden;
            margin-top: 5px;
        }

        .progress-fill {
            height: 100%;
            background: var(--color-gold);
            transition: width 0.3s;
        }
    </style>
</head>
<body>

<div class="modal-overlay" id="clientModal">
    <div class="modal">
        <h2>Szczeg√≥≈Çy Klienta</h2>
        <div id="clientDetails"></div>
        <div style="display: flex; gap: 10px; margin-top: 30px;">
            <button class="btn-primary" onclick="closeModal()">Zamknij</button>
            <button class="btn-danger" onclick="moveToMemorium()">Memorium</button>
        </div>
    </div>
</div>

<div class="modal-overlay" id="taskModal">
    <div class="modal">
        <h2 id="taskModalTitle">Nowe Zadanie</h2>
        <form id="taskForm" onsubmit="handleTaskSubmit(event)">
            <div class="form-group">
                <label>Klient</label>
                <select id="taskClient" required></select>
            </div>
            <div class="form-group">
                <label>Tytu≈Ç</label>
                <input type="text" id="taskTitle" required>
            </div>
            <div class="form-group">
                <label>Opis</label>
                <textarea id="taskDescription" rows="4"></textarea>
            </div>
            <div class="form-group">
                <label>Priorytet</label>
                <select id="taskPriority">
                    <option value="normal">Normal</option>
                    <option value="emergency">üö® Emergency</option>
                </select>
            </div>
            <div style="display: flex; gap: 10px;">
                <button type="submit" class="btn-primary">Utw√≥rz Zadanie</button>
                <button type="button" class="btn-danger" onclick="closeTaskModal()">Anuluj</button>
            </div>
        </form>
    </div>
</div>

<div class="modal-overlay" id="emergencyModal">
    <div class="modal">
        <h2>Rozlicz Emergency</h2>
        <div id="emergencyDetails"></div>
        <div style="margin-top: 20px;">
            <button class="btn-primary" onclick="settleEmergency('paid')" style="width: 100%; margin-bottom: 10px;">
                üí∞ Dolicz 150 PLN
            </button>
            <button class="btn-primary" onclick="settleEmergency('visit_exchange')" style="width: 100%; margin-bottom: 10px;">
                üöó Wymie≈Ñ na -1 Wizytƒô
            </button>
            <button class="btn-primary" onclick="settleEmergency('hours_exchange')" style="width: 100%; margin-bottom: 10px;">
                ‚è∞ Wymie≈Ñ na -2 Godziny
            </button>
            <button class="btn-danger" onclick="closeEmergencyModal()" style="width: 100%; margin-top: 20px;">
                Anuluj
            </button>
        </div>
    </div>
</div>

<div class="container">
    <div class="sidebar">
        <div class="logo">S.W.O. / Admin Panel</div>
        
        <div class="nav-item active" onclick="showSection('dashboard')">
            <span>üè†</span> Pulpit G≈Ç√≥wny
        </div>
        <div class="nav-item" onclick="showSection('clients')">
            <span>üë•</span> Klienci
        </div>
        <div class="nav-item" onclick="showSection('tasks')">
            <span>üìã</span> Zadania
        </div>
        <div class="nav-item" onclick="showSection('emergency')">
            <span>üö®</span> Emergency
        </div>
        <div class="nav-item" onclick="showSection('billing')">
            <span>üí∞</span> Rozliczenia
        </div>

        <button class="btn-primary" onclick="logout()" style="margin-top: auto; width: calc(100% - 20px); margin-left: 10px;">Wyloguj</button>
    </div>

    <div class="main-content">
        <div class="topbar">
            <div style="font-weight: 600; font-size: 0.9rem;">
                Panel Administratora
            </div>
            <div class="user-info">
                <div style="text-align: right;">
                    <div style="font-size: 0.75rem; font-weight: 800;" id="admin-name">Julia Nowak</div>
                    <div style="font-size: 0.65rem; color: #64748b;" id="admin-email">julia@example.com</div>
                </div>
                <button class="logout-btn" onclick="handleLogout()">Wyloguj</button>
            </div>
        </div>

        <div class="content" id="main-content">
            <div class="welcome-box">
                <h2>Witaj w Panelu Administratora! üëã</h2>
                <p>System zarzƒÖdzania klientami jest gotowy do u≈ºycia.</p>
            </div>

            <h1>Dashboard</h1>

            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-label">Aktywni Klienci</div>
                    <div class="stat-value" id="stat-clients">0</div>
                </div>
                <div class="stat-card">
                    <div class="stat-label">Zadania (Ten miesiƒÖc)</div>
                    <div class="stat-value" id="stat-tasks">0</div>
                </div>
                <div class="stat-card">
                    <div class="stat-label">Przych√≥d</div>
                    <div class="stat-value" id="stat-revenue">0 PLN</div>
                </div>
            </div>

            <div class="clients-section">
                <div class="section-title">üìã Lista Klient√≥w</div>
                <div class="client-list" id="client-list">
                    <div style="text-align: center; padding: 40px; color: #64748b;">
                        ≈Åadowanie danych...
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // State
    let currentClientId = null;
    let currentEmergencyId = null;
    let allClients = [];
    let currentSection = 'dashboard';

    // Sprawd≈∫ czy u≈ºytkownik jest zalogowany
    const token = localStorage.getItem('token');
    const user = JSON.parse(localStorage.getItem('user') || '{}');

    if (!token || user.user_type !== 'admin') {
        alert('Brak dostƒôpu. Zaloguj siƒô jako administrator.');
        window.location.href = 'login.html';
    }

    // Fetch helpers
    async function fetchAPI(endpoint, options = {}) {
        const response = await fetch(`http://localhost:3000${endpoint}`, {
            ...options,
            headers: {
                'Content-Type': 'application/json',
                'Authorization': `Bearer ${token}`,
                ...options.headers
            }
        });

        if (!response.ok) {
            if (response.status === 401) {
                alert('Sesja wygas≈Ça. Zaloguj siƒô ponownie.');
                logout();
                return null;
            }
            throw new Error(`HTTP ${response.status}`);
        }

        return response.json();
    }

    // Navigation
    function showSection(section) {
        currentSection = section;
        const navItems = document.querySelectorAll('.nav-item');
        navItems.forEach(item => item.classList.remove('active'));
        event.target.classList.add('active');

        const content = document.getElementById('main-content');
        
        if (section === 'dashboard') {
            loadDashboard();
        } else if (section === 'clients') {
            loadClientsSection();
        } else if (section === 'tasks') {
            loadTasksSection();
        } else if (section === 'emergency') {
            loadEmergencySection();
        } else if (section === 'billing') {
            loadBillingSection();
        }
    }

    // Dashboard
    async function loadDashboard() {
        const content = document.getElementById('main-content');
        content.innerHTML = `
            <div class="welcome-box">
                <h2>Witaj w Panelu Administratora! üëã</h2>
                <p>System zarzƒÖdzania klientami jest gotowy do u≈ºycia.</p>
            </div>

            <h1>Dashboard</h1>

            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-label">Aktywni Klienci</div>
                    <div class="stat-value" id="stat-clients">0</div>
                </div>
                <div class="stat-card">
                    <div class="stat-label">Zadania (Ten miesiƒÖc)</div>
                    <div class="stat-value" id="stat-tasks">0</div>
                </div>
                <div class="stat-card">
                    <div class="stat-label">Przych√≥d</div>
                    <div class="stat-value" id="stat-revenue">0 PLN</div>
                </div>
            </div>

            <div class="clients-section">
                <div class="section-title">üìã Lista Klient√≥w</div>
                <div class="client-list" id="client-list">
                    <div style="text-align: center; padding: 40px; color: #64748b;">
                        ≈Åadowanie danych...
                    </div>
                </div>
            </div>
        `;

        await loadDashboardData();
    }

    async function loadDashboardData() {
        try {
            // Load stats
            const stats = await fetchAPI('/api/clients/stats/summary');
            if (stats) {
                document.getElementById('stat-clients').textContent = stats.activeClients || 0;
                document.getElementById('stat-tasks').textContent = stats.monthlyTasks || 0;
                document.getElementById('stat-revenue').textContent = `${(stats.totalRevenue || 0).toLocaleString('pl-PL')} PLN`;
            }

            // Load clients
            const clients = await fetchAPI('/api/clients');
            if (clients) {
                allClients = clients;
                renderClientList(clients);
            }
        } catch (error) {
            console.error('Error loading dashboard:', error);
            document.getElementById('client-list').innerHTML = `
                <div style="text-align: center; padding: 40px; color: #ef4444;">
                    B≈ÇƒÖd ≈Çadowania danych: ${error.message}
                </div>
            `;
        }
    }

    function renderClientList(clients) {
        const container = document.getElementById('client-list');
        if (!clients || clients.length === 0) {
            container.innerHTML = `
                <div style="text-align: center; padding: 40px; color: #64748b;">
                    Brak klient√≥w w systemie
                </div>
            `;
            return;
        }

        container.innerHTML = clients.map(client => {
            const statusClass = client.status === 'active' ? 'status-completed' : 'status-rejected';
            const statusText = client.status === 'active' ? 'Aktywny' : 'Memorium';
            const usagePercent = client.visits_limit > 0 
                ? Math.round((client.visits_used / client.visits_limit) * 100) 
                : 0;

            return `
                <div class="client-card" onclick="openClientModal(${client.id})">
                    <div class="client-info">
                        <div class="client-name">${client.company_name}</div>
                        <div class="client-package">Pakiet: ${client.package_type}</div>
                        <span class="status-badge ${statusClass}">${statusText}</span>
                    </div>
                    <div class="client-stats">
                        <div>
                            <strong>${client.visits_used}/${client.visits_limit}</strong> Wizyty
                            <div class="progress-bar">
                                <div class="progress-fill" style="width: ${usagePercent}%"></div>
                            </div>
                        </div>
                        <div>
                            <strong>${client.hours_used}/${client.hours_limit}</strong> Godziny
                        </div>
                    </div>
                </div>
            `;
        }).join('');
    }

    // Client modal
    async function openClientModal(clientId) {
        currentClientId = clientId;
        const client = allClients.find(c => c.id === clientId);
        if (!client) return;

        document.getElementById('clientDetails').innerHTML = `
            <div style="margin-bottom: 20px;">
                <h3>${client.company_name}</h3>
                <p style="color: #64748b;">Pakiet: ${client.package_type}</p>
                <span class="status-badge ${client.status === 'active' ? 'status-completed' : 'status-rejected'}">
                    ${client.status === 'active' ? 'Aktywny' : 'Memorium'}
                </span>
            </div>

            <div class="form-group">
                <label>Wizyty</label>
                <div class="counter-box">
                    <button type="button" class="counter-btn" onclick="updateCounter('visits', -1)">-</button>
                    <div class="counter-value">${client.visits_used}/${client.visits_limit}</div>
                    <button type="button" class="counter-btn" onclick="updateCounter('visits', 1)">+</button>
                </div>
            </div>

            <div class="form-group">
                <label>Godziny</label>
                <div class="counter-box">
                    <button type="button" class="counter-btn" onclick="updateCounter('hours', -1)">-</button>
                    <div class="counter-value">${client.hours_used}/${client.hours_limit}</div>
                    <button type="button" class="counter-btn" onclick="updateCounter('hours', 1)">+</button>
                </div>
            </div>

            <div class="form-group">
                <label>Kontakt</label>
                <p>${client.email || 'Brak'}</p>
            </div>
        `;

        document.getElementById('clientModal').classList.add('active');
    }

    function closeModal() {
        document.getElementById('clientModal').classList.remove('active');
        currentClientId = null;
    }

    async function updateCounter(type, delta) {
        if (!currentClientId) return;
        
        const client = allClients.find(c => c.id === currentClientId);
        if (!client) return;

        try {
            const newValue = type === 'visits' 
                ? Math.max(0, client.visits_used + delta)
                : Math.max(0, client.hours_used + delta);

            const updateData = type === 'visits'
                ? { visits_used: newValue }
                : { hours_used: newValue };

            await fetchAPI(`/api/clients/${currentClientId}/subscription`, {
                method: 'PUT',
                body: JSON.stringify(updateData)
            });

            // Reload data
            await loadDashboardData();
            openClientModal(currentClientId);
        } catch (error) {
            alert('B≈ÇƒÖd aktualizacji: ' + error.message);
        }
    }

    async function moveToMemorium() {
        if (!currentClientId) return;
        
        if (!confirm('Czy na pewno przenie≈õƒá klienta do Memorium?')) return;

        try {
            const client = allClients.find(c => c.id === currentClientId);
            const newStatus = client.status === 'active' ? 'memorium' : 'active';

            await fetchAPI(`/api/clients/${currentClientId}/status`, {
                method: 'PUT',
                body: JSON.stringify({ status: newStatus })
            });

            closeModal();
            await loadDashboardData();
        } catch (error) {
            alert('B≈ÇƒÖd zmiany statusu: ' + error.message);
        }
    }

    // Clients section
    async function loadClientsSection() {
        const content = document.getElementById('main-content');
        content.innerHTML = `
            <h1>ZarzƒÖdzanie Klientami</h1>
            <div style="margin-bottom: 20px;">
                <button class="btn-primary" onclick="alert('Funkcja dodawania klient√≥w bƒôdzie dostƒôpna wkr√≥tce')">
                    + Dodaj Klienta
                </button>
            </div>
            <div class="client-list" id="client-list">
                <div style="text-align: center; padding: 40px; color: #64748b;">
                    ≈Åadowanie danych...
                </div>
            </div>
        `;

        try {
            const clients = await fetchAPI('/api/clients');
            if (clients) {
                allClients = clients;
                renderClientList(clients);
            }
        } catch (error) {
            document.getElementById('client-list').innerHTML = `
                <div style="text-align: center; padding: 40px; color: #ef4444;">
                    B≈ÇƒÖd ≈Çadowania danych
                </div>
            `;
        }
    }

    // Tasks section
    async function loadTasksSection() {
        const content = document.getElementById('main-content');
        content.innerHTML = `
            <h1>Zlecenia</h1>
            <div style="margin-bottom: 20px;">
                <button class="btn-primary" onclick="openTaskModal()">
                    + Nowe Zadanie
                </button>
            </div>
            <div id="tasks-container">
                <div style="text-align: center; padding: 40px; color: #64748b;">
                    ≈Åadowanie danych...
                </div>
            </div>
        `;

        try {
            const tasks = await fetchAPI('/api/tasks');
            if (tasks) {
                renderTasks(tasks);
            }
        } catch (error) {
            document.getElementById('tasks-container').innerHTML = `
                <div style="text-align: center; padding: 40px; color: #ef4444;">
                    B≈ÇƒÖd ≈Çadowania zada≈Ñ
                </div>
            `;
        }
    }

    function renderTasks(tasks) {
        const container = document.getElementById('tasks-container');
        if (!tasks || tasks.length === 0) {
            container.innerHTML = `
                <div style="text-align: center; padding: 40px; color: #64748b;">
                    Brak zada≈Ñ
                </div>
            `;
            return;
        }

        container.innerHTML = tasks.map(task => `
            <div class="task-card ${task.is_emergency ? 'emergency' : ''}">
                <div class="task-header">
                    <div class="task-title">
                        ${task.is_emergency ? 'üö® ' : ''}${task.title}
                    </div>
                    <span class="status-badge status-${task.status}">${task.status}</span>
                </div>
                <div class="task-meta">
                    Klient: ${task.client_name || 'N/A'} | Utworzono: ${new Date(task.created_at).toLocaleDateString('pl-PL')}
                </div>
                <div>${task.description || ''}</div>
                ${task.status === 'new' ? `
                    <div style="margin-top: 15px;">
                        <button class="btn-primary" style="padding: 8px 16px; font-size: 0.75rem;" 
                                onclick="updateTaskStatus(${task.id}, 'in_progress')">
                            Rozpocznij
                        </button>
                        <button class="btn-danger" style="padding: 8px 16px; font-size: 0.75rem;" 
                                onclick="updateTaskStatus(${task.id}, 'rejected')">
                            Odrzuƒá
                        </button>
                    </div>
                ` : ''}
                ${task.status === 'in_progress' ? `
                    <div style="margin-top: 15px;">
                        <button class="btn-primary" style="padding: 8px 16px; font-size: 0.75rem;" 
                                onclick="updateTaskStatus(${task.id}, 'completed')">
                            Zako≈Ñcz
                        </button>
                    </div>
                ` : ''}
            </div>
        `).join('');
    }

    async function updateTaskStatus(taskId, newStatus) {
        try {
            await fetchAPI(`/api/tasks/${taskId}/status`, {
                method: 'PUT',
                body: JSON.stringify({ status: newStatus })
            });

            loadTasksSection();
        } catch (error) {
            alert('B≈ÇƒÖd aktualizacji statusu: ' + error.message);
        }
    }

    function openTaskModal() {
        // Load clients for select
        const clientSelect = document.getElementById('taskClient');
        clientSelect.innerHTML = allClients
            .filter(c => c.status === 'active')
            .map(c => `<option value="${c.id}">${c.company_name}</option>`)
            .join('');

        document.getElementById('taskForm').reset();
        document.getElementById('taskModal').classList.add('active');
    }

    function closeTaskModal() {
        document.getElementById('taskModal').classList.remove('active');
    }

    async function handleTaskSubmit(event) {
        event.preventDefault();
        
        const formData = {
            user_id: parseInt(document.getElementById('taskClient').value),
            title: document.getElementById('taskTitle').value,
            description: document.getElementById('taskDescription').value,
            is_emergency: document.getElementById('taskPriority').value === 'emergency'
        };

        try {
            await fetchAPI('/api/tasks', {
                method: 'POST',
                body: JSON.stringify(formData)
            });

            closeTaskModal();
            loadTasksSection();
        } catch (error) {
            alert('B≈ÇƒÖd tworzenia zadania: ' + error.message);
        }
    }

    // Emergency section
    async function loadEmergencySection() {
        const content = document.getElementById('main-content');
        content.innerHTML = `
            <h1>üö® Emergency</h1>
            <p style="color: #64748b; margin-bottom: 30px;">
                Zlecenia Emergency wymagajƒÖ rozliczenia: 150 PLN lub wymiana na wizyty/godziny
            </p>
            <div id="emergency-container">
                <div style="text-align: center; padding: 40px; color: #64748b;">
                    ≈Åadowanie danych...
                </div>
            </div>
        `;

        try {
            const emergencies = await fetchAPI('/api/tasks/emergency');
            if (emergencies) {
                renderEmergencies(emergencies);
            }
        } catch (error) {
            document.getElementById('emergency-container').innerHTML = `
                <div style="text-align: center; padding: 40px; color: #ef4444;">
                    B≈ÇƒÖd ≈Çadowania danych
                </div>
            `;
        }
    }

    function renderEmergencies(emergencies) {
        const container = document.getElementById('emergency-container');
        if (!emergencies || emergencies.length === 0) {
            container.innerHTML = `
                <div style="text-align: center; padding: 40px; color: #64748b;">
                    Brak nierozliczonych Emergency
                </div>
            `;
            return;
        }

        container.innerHTML = emergencies.map(task => `
            <div class="task-card emergency">
                <div class="task-header">
                    <div class="task-title">üö® ${task.title}</div>
                    <span class="status-badge status-${task.status}">${task.status}</span>
                </div>
                <div class="task-meta">
                    Klient: ${task.client_name || 'N/A'} | ${new Date(task.created_at).toLocaleDateString('pl-PL')}
                </div>
                <div style="margin-top: 10px;">${task.description || ''}</div>
                ${task.status === 'completed' && !task.emergency_settled ? `
                    <div style="margin-top: 15px;">
                        <button class="btn-primary" style="padding: 8px 16px; font-size: 0.75rem;" 
                                onclick="openEmergencyModal(${task.id})">
                            Rozlicz Emergency
                        </button>
                    </div>
                ` : ''}
            </div>
        `).join('');
    }

    function openEmergencyModal(emergencyId) {
        currentEmergencyId = emergencyId;
        const emergencies = JSON.parse(sessionStorage.getItem('emergencies') || '[]');
        const emergency = emergencies.find(e => e.id === emergencyId);

        if (emergency) {
            document.getElementById('emergencyDetails').innerHTML = `
                <div style="padding: 20px; background: rgba(239, 68, 68, 0.1); border-radius: 10px;">
                    <h3>${emergency.title}</h3>
                    <p style="color: #64748b; margin-top: 10px;">
                        Klient: ${emergency.client_name}<br>
                        Data: ${new Date(emergency.created_at).toLocaleDateString('pl-PL')}
                    </p>
                </div>
            `;
        }

        document.getElementById('emergencyModal').classList.add('active');
    }

    function closeEmergencyModal() {
        document.getElementById('emergencyModal').classList.remove('active');
        currentEmergencyId = null;
    }

    async function settleEmergency(settlementType) {
        if (!currentEmergencyId) return;

        try {
            await fetchAPI(`/api/tasks/${currentEmergencyId}/emergency/settle`, {
                method: 'POST',
                body: JSON.stringify({ settlement_type: settlementType })
            });

            closeEmergencyModal();
            loadEmergencySection();
        } catch (error) {
            alert('B≈ÇƒÖd rozliczenia: ' + error.message);
        }
    }

    // Billing section
    async function loadBillingSection() {
        const content = document.getElementById('main-content');
        content.innerHTML = `
            <h1>üí∞ Rozliczenia</h1>
            <p style="color: #64748b;">Modu≈Ç rozlicze≈Ñ bƒôdzie dostƒôpny wkr√≥tce</p>
        `;
    }

    // Logout
    function logout() {
        localStorage.removeItem('token');
        localStorage.removeItem('user');
        window.location.href = 'login.html';
    }

    function handleLogout() {
        logout();
    }

    // Initialize
    document.addEventListener('DOMContentLoaded', () => {
        document.getElementById('admin-name').textContent = user.full_name || 'Admin';
        document.getElementById('admin-email').textContent = user.email || 'admin@example.com';
        
        loadDashboard();
    });

    // Store emergencies in session for modal
    window.addEventListener('load', async () => {
        try {
            const emergencies = await fetchAPI('/api/tasks/emergency');
            if (emergencies) {
                sessionStorage.setItem('emergencies', JSON.stringify(emergencies));
            }
